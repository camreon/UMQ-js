extends layout

block content
	form(method='post', action='/playlist')
		input#input(type='text', name='url' value='https://www.youtube.com/watch?v=FOns9gObzHE')
		input(type='submit' value='ADD')

	h2 PLAYLIST
	ol#playlist
		each url in playlist
			li=url

	h2 PLAYER
	iframe#player(width='420', height='36', src='', frameborder='1px', allowfullscreen='')

	script(src='https://code.jquery.com/jquery-2.1.3.js')
	script(src='/javascripts/umq.js')